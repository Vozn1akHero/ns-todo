{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@app/*": ["src/app/*"]
    }
    //"typeRoots": ["node_modules/@types", "node_modules/@types/node"]
  },
  "include": ["references.d.ts", "src/tests/**/*.ts"],
  "files": ["./src/main.ts"],
  "exclude": ["node_modules", "platforms", "e2e"]
}
